    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "."
            }
        },
        {
            "name": "Python: Profile Current File",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": true,
            "module": "cProfile",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "-o",
                "/tmp/tmp.prof",
                "${file}"
            ]
        },
        {
            "name": "Python: Line Segment",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": [
                "linesegment"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Character Segment",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": [
                "charactersegment"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Segment: Single file",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": [
                "linesegment",
                "--file",
                "/workspaces/Dead-Sea-Scrolls/data/unpacked/image-data/P168-Fg016-R-C01-R01-binarized.jpg",
                "--debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Segment Characters: Single file",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": [
                "charactersegment",
                "--file",
                "data/out/segments/lines/P123-Fg001-R-C01-R01-binarized/segment_4345.png",
                "--debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
